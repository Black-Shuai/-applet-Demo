/* components/imageUploader/imageUploader.wxss */
@import '/style/weui.wxss';

.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weui-cell__hd {
  border-right: 1rpx solid rgba(0, 0, 0, 0.2);
  margin-right: 10px;
  display: inline-block;
  width: 80px;
  padding: 10px 20px;
}

.uploader-camera {
  width: 50px;
  height: 50px;
  float: right;
  margin: 46px 5px 5px 0;
}

.weui-uploader__file {
  margin-bottom: 15px;
  position: relative;
  padding: 10px;
}

.weui-uploader__info {
  color: #aaa;
}

.delete {
  position: absolute;
  top: 0;
  right: 0;
  background: white;
  border-radius: 50%;
}
